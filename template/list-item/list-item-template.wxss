.recommend-image {
  width: 89rpx;
  height: 89rpx;
  overflow: hidden;
  border-radius: 50%;
}
.recommend-image image {
  width: 100%;
  height: 100%;
}
.recommend-content {
  width: 580rpx;
  margin-left: 20rpx;
}
.recommend-title {
  display: flex;
}
.recommend-title .title {
  font-size: 24rpx;
  color: #1B1B1B;
  margin-right: auto;
  margin-top: 10rpx;
}
.recommend-title .date {
  font-size: 24rpx;
  color: #A4A4A4;
  font-weight: 100;
}
.recommend-contenttext {
  font-size: 28rpx;
  font-weight: 300;
  color: #A4A4A4;
  line-height: 45rpx;
  margin-top: 20rpx;
}
.recommend-reply {
  display: block;
  width: 86rpx;
  height: 36rpx;
  background: #F4F4F4;
  border-radius: 10rpx;
  font-size: 20rpx;
  color: #A4A4A4;
  text-align: center;
  line-height: 36rpx;
  margin-top: 10rpx;
}