/**index.wxss**/
@import "/template/base.wxss";
@import "/template/index-item/index-item-template.wxss";
@import "/template/list-item/list-item-template.wxss";
@import "/template/progress-item/progress-item-template.wxss";



.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.text-info {
  color: blue;
}
.swiper-each{
  width: 750rpx;
  height: 300rpx;
  overflow: hidden;
}
.swiper-each swiper-item .swiper-image {
  width: 100%;
  height: 500rpx;
}
.swiper-each swiper-item {
  position: relative;
}
.vide-btn {
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -50rpx;
  margin-top: -50rpx;
  opacity: .6;
  box-shadow: 2px 2px 1px #888888;
}
.vide-strt {
  width: 100%;
  height: 100%;
  position: relative;
}
.vide-grod {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -20rpx;
  margin-left: -25rpx;
  width:0;
  height:0;
  border-top: 20rpx solid transparent;
  border-bottom: 20rpx solid transparent;
  border-right: 40rpx solid #888888;
}
.videBtn-left {
  width: 50rpx;
  height: 40rpx;
  position: absolute;
  left: -100rpx;
  top: 50%;
  margin-top: -20rpx;
}
.videBtn-left image {
 width: 100%;
 height: 100%; 
}
.videBtn-right {
  width: 50rpx;
  height: 40rpx;
  position: absolute;
  right: -100rpx;
  top: 50%;
  margin-top: -20rpx;
  box-sizing: border-box;
  padding: 5rpx;
}
.videBtn-right image {
  width: 100%;
  height: 100%;
}
.font-text-content {
  width: 750rpx;
  box-sizing: border-box;
  padding: 24rpx 40rpx 0;
}
.text-h2 {
  display: block;
  font-size: 32rpx;
  line-height: 45rpx;
  display: flex;
}
.text-date {
  font-size: 24rpx;
  display: flex;
  color: #AAAAAA;
  font-weight: 400;
  line-height: 33rpx;
  margin-top: 10rpx;
}
.text-date label {
  margin-right: 20rpx;
}
.text-content {
  color: #AAAAAA;
  font-size: 24rpx;
  line-height: 48rpx;
  font-weight: 400;
  letter-spacing: 2rpx;
  margin-top: 30rpx;
}





.recommend-list {
  margin-bottom: 150rpx;
}
.input-box {
  width: 750rpx;
  height: 98rpx;
  display: flex;
  box-sizing: border-box;
  padding: 19rpx 40rpx;
  box-shadow: -5rpx 5rpx 20rpx 1rpx rgba(151, 151, 151, .3);
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
}
.input-box input {
  width: 480rpx;
  height: 60rpx;
  background: #F4F4F4;
  border: 3rpx solid rgba(151, 151, 151, .3);
  font-size: 24rpx;
  color: #A4A4A4;
  font-weight: 400;
  box-sizing: border-box;
  padding-left: 40rpx;
  border-radius: 10rpx; 
}
.input-box image {
  display: block;
  width: 40rpx;
  height: 38rpx;
  margin-left: auto;
  margin-top: 10rpx;
}
.box-video {
  display: block;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.icon-img {
  display: flex;
}
.icon-iphone {
  width:60rpx;
  height:60rpx;
  margin-right: auto;
}
.icon-sao {
  margin-right: 20rpx;
  margin-top: 25rpx;
  width: 40rpx;
  height: 30rpx;
}
.num-power {
   margin-right: auto;
   margin-top: 20rpx;
   font-size: 20rpx;
}
.video-admin {
  display: block;
  width: 750rpx;
  height: 300rpx;
  position: absolute;
  top: 70rpx;
  left: 0rpx;
}
.BtnSendOut {
  height: 60rpx;
  font-size: 12rpx;
}
.fontAudioimage {
  margin-left: auto; 
  margin-top: -10rpx; 
  margin-right: 10rpx;
  font-size: 25px;
  color: rgba(99, 171, 248, 1);
}
